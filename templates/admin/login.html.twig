{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
        <div class="row d-table w-100 min-vh-100">
            <div class="col-12 d-table-row">
                <form action="{{ path('app_login') }}" class="px-5 d-table-cell align-middle" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('admin_logout') }}">Logout</a>
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-12 text-center pb-3" id="order_header">
                            <h4 class="text-primary">Fluid Sign In</h4>
                            <span class="text-primary">
                        Sign in to your Fluid wholesale account or easily create a new account.
                    </span>
                        </div>
                    </div>
                    <div class="row mt-5">
                        <div class="col-12 col-md-4 offset-xs-0 offset-md-1">
                            <input type="text" id="username" class="form-control" name="email" placeholder="Email" value="{{ last_username }}"/>
                        </div>
                        <div class="col-12 col-md-4 position-relative">
                            <input type="password" id="password" class="form-control" placeholder="Password" name="password"/>
                        </div>
                        <div class="col-12 col-md-2">
                            <button type="submit" class="btn btn-primary w-100">SIGN IN</button>
                        </div>
                    </div>
                    <div class="row text-center">
                        <div class="col-12 col-md-10 offset-xs-0 offset-md-1 mt-3 mt-md-5">
                            <a href="{{ path('app_forgot_password_request') }}" type="submit" class="fs-6">
                                Forgot Password
                            </a>
                            <span class="px-2">|</span>
                            <a href="" class="fs-6">
                                Create Account
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
